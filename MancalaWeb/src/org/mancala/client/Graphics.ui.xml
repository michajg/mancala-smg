<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style field="css" type="org.mancala.client.GameCss">
  	body {
			background-image:url(pattern7.jpg); 
			background-repeat:repeat;
		}
		.status{
			padding: 35px;
      font-family: 'Press Start 2P', cursive;
      font-size:20px;
    }
    .warnLabel{
			padding: 25px;
      font-family: 'Press Start 2P', cursive;
      font-size:12px;
			font-color:red;
    }
    .leftLabels{
			padding-left: 35px;
			padding-top: 10px;
      font-family: 'Press Start 2P', cursive;
      font-size:10px;
    }
		.sideLabel{
			padding-left: 35px;
			padding-top: 0px;
			padding-bottom: 10px;
      font-family: 'Press Start 2P', cursive;
      font-size:10px;
    }
    .highlighted {
      outline: dotted green 2px;
    }
    td img {
    	display: block
    }
    .popup {
			margin:0px;
			background-color: lightgrey;
			size:0px;
		}
		.gameBackgroundDiv {
			background-color: white;
		}
		.button {
	 		margin: 10px;
		}
  </ui:style>
  <g:HTMLPanel styleName="{css.gameBackgroundDiv}">  
    <g:PopupPanel ui:field="gamePopupPanel" styleName="{css.popup}"/>
    <g:Label ui:field="aiMovesLabel" styleName="{css.warnLabel}"/> 
    <g:Label ui:field="warnLabel" styleName="{css.warnLabel}"/> 
  	<g:Label ui:field="turnLabel" styleName="{css.status}"/>
  	<g:Label ui:field="sideLabel" styleName="{css.sideLabel}"/> 
    <g:AbsolutePanel ui:field="gameAbsolutePanel"/>
    <g:Label ui:field="userNameLabel" styleName="{css.leftLabels}"/> 
    <g:Label ui:field="emailLabel" styleName="{css.leftLabels}"/> 
    <g:Label ui:field="opponentNameLabel" styleName="{css.leftLabels}"/> 
    <g:Label ui:field="matchIdLabel" styleName="{css.leftLabels}"/> 
    <g:Label ui:field="startDateLabel" styleName="{css.leftLabels}"/> 
    <g:Button text="" ui:field="aiIsSouthButton" styleName="{css.button}"/>
    <g:Button text="" ui:field="aiIsNorthButton" styleName="{css.button}"/><br/>
    <g:Button text="" ui:field="automatchButton" styleName="{css.button}"/>
    <g:HorizontalPanel spacing="10">
      <g:TextBox ui:field="emailBox" text=""/>
      <g:Button ui:field="playButton" text="" />
    </g:HorizontalPanel>
    <g:HorizontalPanel spacing="10">
      <g:ListBox ui:field="matchList">
        <g:item>
        </g:item>
      </g:ListBox>
      <g:Button ui:field="deleteButton" text = "" />
    </g:HorizontalPanel>
    
  </g:HTMLPanel>
</ui:UiBinder> 